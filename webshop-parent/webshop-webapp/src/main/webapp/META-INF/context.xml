<?xml version="1.0" encoding="UTF-8"?>
<Context docBase="webshop-webapp" path="/" crossContext="true" reloadable="true" source="org.eclipse.jst.jee.server:webshop-webapp">

<Resource name="jdbc/webshopDataSource"
         auth="Container"
         type="javax.sql.DataSource"
         driverClassName="com.mysql.jdbc.Driver"
         url="jdbc:mysql://localhost:3306/webshop?useUnicode=true&amp;characterEncoding=UTF-8&amp;characterSetResults=UTF-8&amp;autoReconnect=true&amp;failOverReadOnly=false&amp;maxReconnects=10"
         username="root"
         password="sa"
         removeAbandoned="true"
         logAbandoned="true"
         maxActive="10"
         maxIdle="10"
         maxWait="-1"/>

    <WatchedResource>WEB-INF/web.xml</WatchedResource>

</Context>